<% include ../views/partials/header %>
<div class="row">
<div class="col-md-6">
<form method="post" action="/task/add">
    <div class="form-group">
      <label>Task Name</label>
      <input  class="form-control" type="text" name="text" placeholder="Add Task">
    </div>
    <div class="form-group">
      <label>Task Body</label>
      <textarea class="form-control" name="body" placeholder="Add Body"></textarea>
    </div>
    <br>
    <button class="btn btn-primary btn-block" type="submit">Submit</button>
  </form>

</div>

<div class="col-md-6">
<ul class="list-group">
    <%tasks.forEach((task)=>{ %>
      <li class="list-group-item "><%= task.text %> - <%= task.body %> <a data-id="<%= task._id %>" href="#" class="delete-task btn btn-danger">Delete</a>
      <a  href="/task/edit/<%= task._id %>" class="btn btn-warning" >Edit</a></li>
    <% }) %>
  </ul>
</div>
</div>




<% include ../views/partials/footer %>